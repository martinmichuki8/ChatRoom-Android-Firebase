<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ChatRoom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F44336</item>
        <item name="colorSecondaryVariant">#6A3423</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="pageBackground">
        <item name="android:background">@drawable/bg2</item>
    </style>
    <style name="blackText">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="cards">
        <item name="android:background">@color/white</item>
    </style>
</resources>